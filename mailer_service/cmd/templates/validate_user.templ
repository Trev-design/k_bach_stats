package templates

templ ValidateUser(validation, name, purpose string) {
    <div style="width: 100vw; height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center;">
        <h2 style="font-size: 1.15rem; padding: 1rem 0;">Hello {name}</h2>
        <p style="font-size: 1.1rem; padding: 0.4rem 0; margin: 0 0.5rem; text-align: right;">to {purpose} enter this number: {validation}</p>
    </div>
}